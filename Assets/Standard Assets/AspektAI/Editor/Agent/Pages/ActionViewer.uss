.goal {
    background-color: gray;
}

.action {
    min-width: 500px;
}

.action-title {
    -unity-font-style: bold;
    width: 500px;
}

.action-details {
    display: flex;
    flex-direction: row;
}

.condition-container {
    display: flex;
    flex-direction: column;
    
    border-color: black;
    border-width: 1px;

    width: 250px;
}

.condition-container-heading {
    -unity-font-style: bold;
}

.attribute {
    color: black;
    background-color: whitesmoke;
    border-color: black;
    border-width: 1px;
    
    width: 150px;
}

.attribute-unmet {
    color: red;
    background-color: pink;
}

.attribute-met {
    color: green;
    background-color: #1b6d85;
}

.attribute-selected {
    -unity-font-style: bold;
    border-color: #2e6da4;
}